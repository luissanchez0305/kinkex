<?xml version="1.0"?>
<config>
    <modules>
        <Quiz_Result>
            <version>0.1.0</version>
        </Quiz_Result>
    </modules>
    <frontend>
        <routers>
            <result>
                <use>standard</use>
                <args>
                    <module>Quiz_Result</module>
                    <frontName>result</frontName>
                </args>
            </result>
        </routers>
        <layout>
            <updates>
                <result>
                    <file>result.xml</file>
                </result>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<result>
				<use>admin</use>
				<args>
					<module>Quiz_Result</module>
					<frontName>result</frontName>
				</args>
			</result>
        </routers>
    </admin>
    <adminhtml>
		<!--<menu>
			<result module="result">
				<title>Result</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="result">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>result/adminhtml_result</action>
					</items>
				</children>
			</result>
		</menu>-->
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Quiz_Result>
							<title>Result Module</title>
							<sort_order>10</sort_order>
						</Quiz_Result>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<result>
					<file>result.xml</file>
				</result>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <result>
                <class>Quiz_Result_Model</class>
                <resourceModel>result_mysql4</resourceModel>
            </result>
            <result_mysql4>
                <class>Quiz_Result_Model_Mysql4</class>
                <entities>
                    <result>
                        <table>result</table>
                    </result>
                </entities>
            </result_mysql4>
        </models>
        <resources>
            <result_setup>
                <setup>
                    <module>Quiz_Result</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </result_setup>
            <result_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </result_write>
            <result_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </result_read>
        </resources>
        <blocks>
            <result>
                <class>Quiz_Result_Block</class>
            </result>
        </blocks>
        <helpers>
            <result>
                <class>Quiz_Result_Helper</class>
            </result>
        </helpers>
    </global>
</config>